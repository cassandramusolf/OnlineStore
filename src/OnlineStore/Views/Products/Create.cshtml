@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OnlineStore.Models.Product

<h1>Add A New Product</h1>

<div class="container">
    @using (Html.BeginForm())
    {
        <h3>
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Description)
            @Html.TextBoxFor(model => model.Description)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Price)
            @Html.TextBoxFor(model => model.Price)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Color)
            @Html.TextBoxFor(model => model.Color)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.SubCategory)
            <select name="SubCategory" id="SubCategory">
                <option value="Sports Bras">Sports Bras</option>
                <option value="Tanks">Tanks</option>
                <option value="Pants">Pants</option>
                <option value="Short Sleeves">Short Sleeves</option>
                <option value="Long Sleeves">Long Sleeves</option>
                <option value="Jackets & Hoodies">Jackets & Hoodies</option>
                <option value="Sweaters">Sweaters</option>
                <option value="Swim">Swim</option>
                <option value="Shorts">Shorts</option>
                <option value="Yoga Mats">Yoga Mats</option>
                <option value="Water Bottles">Water Bottles</option>
                <option value="Bags">Bags</option>
                <option value="Hats & Headbands">Hats & Headbands</option>
            </select>
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Image)
            @Html.TextBoxFor(model => model.Image)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Inventory)
            @Html.TextBoxFor(model => model.Inventory)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Category)
            <select name="CategoryId" id="CategoryId">
                <option value="1">Women</option>
                <option value="2">Men</option>
                <option value="3">Accessories</option>
            </select>
        </h3>
        <br />
        <input class="btn btn-lg btn-default" type="submit" value="ADD ITEM" />
    }
</div>