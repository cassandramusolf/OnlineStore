@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OnlineStore.Models.Product

<h1>Add A New Product</h1>

<div class="container">
    @using (Html.BeginForm())
    {
        <h3>
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Description)
            @Html.TextBoxFor(model => model.Description)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Price)
            @Html.TextBoxFor(model => model.Price)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Color)
            @Html.TextBoxFor(model => model.Color)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.SubCategory)
            @Html.TextBoxFor(model => model.SubCategory)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Image)
            @Html.TextBoxFor(model => model.Image)
        </h3>
        <br />
        <h3>
            @Html.LabelFor(model => model.Category)
            @Html.TextBoxFor(model => model.CategoryId)
        </h3>
        <br />
        <input class="btn btn-lg btn-default" type="submit" value="ADD ITEM" />
    }
</div>