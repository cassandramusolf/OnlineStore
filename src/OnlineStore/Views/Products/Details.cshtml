@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OnlineStore.Models.Product

<h1>@Html.DisplayFor(model => model.Name)</h1>


<div class="col-md-8">
    <div class="card">
        <img src="@Html.DisplayFor(model => model.Image)" alt="Clothing" style="width:100%">
        <div class="card-block">
            <h3 class="card-title text-center">@Html.DisplayFor(model => model.Name)</h3>
            <h3 class="card-title text-center">@Html.DisplayFor(model => model.Description)</h3>
            <h3 class="card-title text-center">@Html.DisplayFor(model => model.Color)</h3>
            <h3 class="card-text text-center">$@Html.DisplayFor(model => model.Price)</h3>
            @using (Html.BeginForm())
            {
                <h3 class="text-center">
                    @Html.LabelFor(model => model.Size)
                    <select name="Size" id="Size">
                        <option value="Extra Small">Extra Small</option>
                        <option value="Small">Small</option>
                        <option value="Medium">Medium</option>
                        <option value="Large">Large</option>
                        <option value="Extra Large">Extra Large</option>
                    </select>
                </h3>
                @Html.ActionLink("ADD TO CART", "AddToCart", "ShoppingCart", new { id = Model.Id }, new { @class = "btn btn-default btn-lg" })
            }

        </div>
    </div>
</div>
